@model Pocherajme.Models.ApplicationUser

@{
    ViewData["Title"] = "Profil";
}

<hr class="">
<div class="container target">
    <div class="row">
        <div class="col-sm-10">
            <h1 class="">@Model.FirstName @Model.LastName</h1>
            <br>
        </div>
    </div>
    <br>
    <div class="row">
        <div class="col-sm-3">
            <!--left col-->
            <ul class="list-group">
                <li class="list-group-item text-muted" contenteditable="false">Profile</li>
                @if (!String.IsNullOrEmpty(Model.PhoneNumber))
                {
                    <li class="list-group-item text-right"><span class="pull-left"><strong class="">Broj telefona </strong></span>@Model.PhoneNumber</li>
                }
                else
                {
                    <li class="list-group-item text-right"><span class="pull-left"><strong class="">Broj telefona </strong></span> N/A</li>
                }
                <li class="list-group-item text-right"><span class="pull-left"><strong class="">Email </strong></span> <a href="mailto:@Model.Email">@Model.Email</a></li>
                @if (Model.City != null)
                {
                    <li class="list-group-item text-right"><span class="pull-left"><strong class="">Grad </strong></span> @Model.City.Name</li>
                }
                else
                {
                    <li class="list-group-item text-right"><span class="pull-left"><strong class="">Grad </strong></span> N/A</li>
                }
            </ul>
            <div class="panel panel-default">
                <div class="panel-heading">
                    Ovjeren
                </div>
                <div class="panel-body">
                    @if (Model.EmailConfirmed)
                    {
                        <span>

                            <i style="color:green" class="fa fa-check-square"></i> Korisnik je ovjerio svoj nalog.
                        </span>
                    }
                    else
                    {
                        <span>

                            <i style="color:green" class="fa fa-cross"></i>Korisnik nije ovjerio svoj nalog.
                        </span>

                    }

                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-heading">
                    Ocjena <i class="fa fa-link fa-1x"></i>
                </div>
                <div class="panel-body">
                    4.5
                </div>
            </div>
        </div>
        <!--/col-3-->
        <div class="col-sm-9" style="" contenteditable="false">
            <div class="panel panel-default">
                <div class="panel-heading">Starfox221's Bio</div>
                <div class="panel-body">
                    A long description about me.

                </div>
            </div>
            <div class="panel panel-default target">
                <div class="panel-heading" contenteditable="false">Pets I Own</div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-4">
